<%# ------- FORM FOR CREATING MEETING INVITE ------- %>

<div class="containter">
  <div class="row justify-content-center">
    <div class="col-3">
      <h5>Create a new meeting:</h5>
      <%= simple_form_for @meeting do |f| %>
        <%= f.input :start_datetime, as: :string, label: "Start Date", class: "form-control", input_html: {class: "datepicker"} %>
        <%= f.input :start_datetime, as: :string, label: "Start Time", class: "form-control", input_html: {class: "timepicker"} %>
        <%= f.input :end_datetime, as: :string, label: "End Date", class: "form-control", input_html: {class: "datepicker"} %>
        <%= f.input :end_datetime, as: :string, label: "End Time", class: "form-control", input_html: {class: "timepicker"} %>
        <%= f.input :location, as: :text, label: 'Location:', placeholder:"eg. 11B Baker street", class: "form-control" %>
        <%= f.button :submit, "Create Meeting", class: "btn btn-dark" %>
      <% end %>
    </div>
  </div>
</div>
