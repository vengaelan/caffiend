<%# ------- CONTAINER FOR LOG IN FORM ------- %>
<div class="login-container">
  <div class="row justify-content-center login-box">
    <div class="login-card">
      <center><h2>Log in to your account</h2></center><br>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs form-style">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      placeholder: "email address" %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" },
                      placeholder: "password" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions login-buttons">
          <%= f.button :submit, "Log in", class:"login-btn" %>&nbsp;
          <%= link_to image_tag("btn_google_signin_dark_normal_web.png"), user_google_oauth2_omniauth_authorize_path, method: :post %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
